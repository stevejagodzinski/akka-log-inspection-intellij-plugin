<idea-plugin>
    <id>com.github.stevejagodzinski.akka-log-inspection-plugin</id>
    <name>Akka Log Inspections</name>
    <version>1.0.3-SNAPSHOT</version>
    <vendor email="steve.jagodzinski@gmail.com" url="https://github.com/stevejagodzinski/">Steve Jagodzinski</vendor>

    <description><![CDATA[
      Provides code inspections to highlight invocations to Akka's logging framework where the number of message placeholders do not match the number of arguments passed to the log method.
    ]]></description>

    <change-notes><![CDATA[
      2019-10-31 1.0.0 Initial release
      2019-11-02 1.0.1 +Inspection description
      2019-11-02 1.0.2 +Release Notes
    ]]>
    </change-notes>

    <!-- please see http://www.jetbrains.org/intellij/sdk/docs/basics/getting_started/build_number_ranges.html for description -->
    <idea-version since-build="173.0"/>

    <!-- please see http://www.jetbrains.org/intellij/sdk/docs/basics/getting_started/plugin_compatibility.html
         on how to target different products -->
    <!-- uncomment to enable plugin in all products
    <depends>com.intellij.modules.lang</depends>
    -->

    <extensions defaultExtensionNs="com.intellij">
        <localInspection
                displayName="Number of placeholders does not match number of arguments in Akka logging call"
                enabledByDefault="true"
                groupName="Logging"
                groupPath="Java"
                implementationClass="com.github.stevejagodzinski.aliip.inspection.LogPlaceholderInspection"
                language="JAVA"
                level="WARNING"
                shortName="log-placeholder-inspection"
        />
    </extensions>

    <actions>
        <!-- Add your actions here -->
    </actions>

</idea-plugin>